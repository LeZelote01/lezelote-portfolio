{
  "manifest_version": 2,
  "name": "Gestionnaire de Mots de Passe",
  "version": "2.0.0",
  "description": "Extension sécurisée pour la gestion des mots de passe avec auto-remplissage et génération",
  
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "notifications",
    "http://localhost:8002/*",
    "https://*/*",
    "http://*/*"
  ],
  
  "background": {
    "scripts": ["../chrome/background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["../chrome/content.js"],
      "css": ["../chrome/content.css"],
      "run_at": "document_idle"
    }
  ],
  
  "browser_action": {
    "default_popup": "../chrome/popup.html",
    "default_title": "Gestionnaire de Mots de Passe",
    "default_icon": {
      "16": "../chrome/icons/icon16.png",
      "32": "../chrome/icons/icon32.png",
      "48": "../chrome/icons/icon48.png",
      "128": "../chrome/icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "../chrome/icons/icon16.png",
    "32": "../chrome/icons/icon32.png", 
    "48": "../chrome/icons/icon48.png",
    "128": "../chrome/icons/icon128.png"
  },
  
  "web_accessible_resources": [
    "../chrome/inject.js"
  ],
  
  "applications": {
    "gecko": {
      "id": "gestionnaire-mdp@cybersec.local",
      "strict_min_version": "78.0"
    }
  }
}