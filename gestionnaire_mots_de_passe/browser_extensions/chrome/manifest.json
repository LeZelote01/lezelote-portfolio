{
  "manifest_version": 3,
  "name": "Gestionnaire de Mots de Passe",
  "version": "2.0.0",
  "description": "Extension sécurisée pour la gestion des mots de passe avec auto-remplissage et génération",
  
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "notifications"
  ],
  
  "host_permissions": [
    "http://localhost:8002/*",
    "https://*/*",
    "http://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gestionnaire de Mots de Passe",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ]
}