{
  "manifest_version": 2,
  "name": "Gestionnaire de Mots de Passe",
  "version": "2.0.0",
  "description": "Extension sécurisée pour auto-remplissage et génération de mots de passe",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "<all_urls>",
    "notifications",
    "contextMenus"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Gestionnaire MDP",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    "inject.js",
    "styles.css",
    "icons/*.png"
  ],
  
  "content_security_policy": "script-src 'self'; object-src 'self'",
  
  "applications": {
    "gecko": {
      "id": "password-manager@cybersecurity.local",
      "strict_min_version": "57.0"
    }
  }
}